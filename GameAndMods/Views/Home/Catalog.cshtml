@model IEnumerable<DobleModel>
    <link rel="stylesheet" href="~/css/catalog.css" />

    <div class="row">
        <div class="col-2" style="background-color: #424b5c">
            <div class="list-group bg-dark text-light" id="list-tab" role="tablist">

                @{
                    int i = 0;
                    int e = 0;
                    int c = 0;
                    if (Model == null)
                    {
                        <a>чето</a>
                    }
                    else
                    {

                    }
                    foreach (var categori in Model)
                    {
                        if (c == 0)
                        {
                            if (i < 3)
                            {
                                <a class="text-light list-group-item list-group-item-action active btn-secondary" style="background-color:#424b5c" data-placement="top" title="Подсказка вверху"
                                   id="list-@categori.ID_Categori" data-toggle="list"
                                   href="#list-@categori.ID_Categori-hf" role="tab" aria-controls="@categori.ID_Categori">@categori.NameCategori</a>
                                i++;
                            }
                            c++;
                        }
                        else
                        {
                            if (i < 3)
                            {
                                <a class="text-light list-group-item list-group-item-action btn-secondary" style="background-color:#424b5c" data-placement="top" title="Подсказка вверху"
                                   id="list-@categori.ID_Categori" data-toggle="list"
                                   href="#list-@categori.ID_Categori-hf" role="tab" aria-controls="@categori.ID_Categori">@categori.NameCategori</a>
                                i++;
                            }
                        }
                    }
                }
            </div>
        </div>
        <div class="col-10">
            <div class="tab-content" id="nav-tabContent">
                @{ int numberCategori = 0;
                    @for (int o = 1; o <= 3; o++)
                    {
                        if (e == 0)
                        {
                            e++;

                            <div class="tab-pane fade show active" id="list-@o-hf" role="tabpanel" aria-labelledby="list-@o">
                                <div class="d-flex flex-column " >
                                    @foreach (var Game in Model)
                                    {
                                        if (Game.Categori_ID == o)
                                        {
                                            <div style="padding-top:30px;">
                                                <div class="card w-75" style="background-color:#31373e;" >
                                                    <img src="@Game.Img1" class="card-img-top" alt="...">
                                                    <div class="card-body">
                                                        <h5 class="card-title text-light">@Game.Title</h5>
                                                        <h4 class="card-text text-light">@Game.CategoriName</h4>
                                                        <p class="card-text text-light">@Game.Description</p>
                                                        <a href="~/Home/AddToElement?ID=@Game.Id" class="btn btn-primary">Добавить в корзину</a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>

                        }
                        else
                        {
                            <div class="tab-pane fade show active" id="list-@o-hf" role="tabpanel" aria-labelledby="list-@o">
                                <div class="d-flex flex-column">
                                    @foreach (var Game in Model)
                                    {
                                        if (Game.Categori_ID == o)
                                        {
                                            <div style="padding-top:30px;">
                                                <div class="card w-75" style="background-color:#31373e;">
                                                    <img src="@Game.Img1" class="card-img-top" alt="...">
                                                    <div class="card-body">
                                                        <h5 class="card-title text-light">@Game.Title</h5>
                                                        <h4 class="card-text text-light">@Game.CategoriName</h4>
                                                        <p class="card-text text-light">@Game.Description</p>
                                                        <a href="~/Home/AddToElement?ID=@Game.Id" class="btn btn-primary">Добавить в корзину</a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    }}

            </div>
        </div>
    </div>
