
@model GameAndMods.ViewModel.UsersModel

@{
    ViewBag.Title = "Регистрация";
}
<body style="background-color:#31373e; height: 100%; background-repeat: no-repeat;">

    <div class="h-80 container">
        <div class="row align-items-center h-100">
            <div class="mx-auto">
                <form asp-action="Create" asp-controller="Account" asp-antiforgery="true" method="post" enctype="multipart/form-data">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>

                        <div class="card text-center" style="background-color:#454853">
                            <div class="card-header">
                                <a class="display-4">
                                    <img class="img-fluid" src="~/images/logo1.png" alt="..." style="max-height:500px">
                                </a>
                            </div>
                            <div class="card-body">
                                <p>
                                    <label class="text-light" asp-for="Email">Email</label>
                                    <input asp-for="Email" />
                                    <span asp-validation-for="Email" />

                                </p>
                                <p>
                                    <label class="text-light" asp-for="Password">Введите пароль</label>
                                    <input asp-for="Password" />
                                    <span asp-validation-for="Password"></span>

                                </p>
                                
                                <p>
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <input asp-for="AvatarURL" class="custom-file-input" id="customFile">
                                            <label class=" custom-file-label text-black-50" for="customFile">Choose file</label>
                                        </div>
                                        <span asp-validation-for="AvatarURL" class="text-danger"></span>
                                    </div>
                                </p>
                                <p>
                                    <input class="text-light bg-danger" type="submit" value="Зарегистрироваться" />
                                </p>
                            </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section scripts{
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}